    <script>
        // === FUNDO INTERATIVO ===
        const canvas = document.getElementById("fundo");
        const ctx = canvas.getContext("2d");

        canvas.width = innerWidth;
        canvas.height = innerHeight;

        // Criação das partículas
        const particles = [];
        const numParticles = 120;

        for (let i = 0; i < numParticles; i++) {
            particles.push({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                size: Math.random() * 2 + 1,
                speedX: (Math.random() - 0.5) * 0.6,
                speedY: (Math.random() - 0.5) * 0.6,
            });
        }

        // Posição do mouse
        const mouse = { x: null, y: null };
        document.addEventListener("mousemove", (e) => {
            mouse.x = e.x;
            mouse.y = e.y;
        });

        // Redimensiona o canvas ao mudar o tamanho da janela
        window.addEventListener("resize", () => {
            canvas.width = innerWidth;
            canvas.height = innerHeight;
        });

        // Efeito de zoom conforme o scroll (sutil)
        window.addEventListener("scroll", () => {
            ctx.setTransform(1, 0, 0, 1, 0, 0); // reset
            const zoom = 1 + scrollY * 0.00005;
            ctx.scale(zoom, zoom);
        });

        // Função de animação
        function animate() {
            ctx.fillStyle = "rgba(0, 0, 48, 0.25)";
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Atualiza partículas
            for (let p of particles) {
                p.x += p.speedX;
                p.y += p.speedY;

                // Rebote nas bordas
                if (p.x < 0 || p.x > canvas.width) p.speedX *= -1;
                if (p.y < 0 || p.y > canvas.height) p.speedY *= -1;

                ctx.beginPath();
                ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                ctx.fillStyle = "rgba(0, 200, 255, 0.7)";
                ctx.fill();
            }

            // Linhas tipo "raios" conectando mouse e partículas próximas
            for (let p of particles) {
                const dx = mouse.x - p.x;
                const dy = mouse.y - p.y;
                const dist = Math.sqrt(dx * dx + dy * dy);

                if (dist < 100) {
                    ctx.beginPath();
                    ctx.moveTo(p.x, p.y);
                    ctx.lineTo(mouse.x, mouse.y);
                    ctx.strokeStyle = `rgba(0, 200, 255, ${(1 - dist / 100).toFixed(2)})`;
                    ctx.lineWidth = 0.5;
                    ctx.stroke();
                }
            }

            requestAnimationFrame(animate);
        }

        animate();
    </script>
